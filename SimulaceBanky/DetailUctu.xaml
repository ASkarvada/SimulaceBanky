        <TextBlock HorizontalAlignment="Left" Height="23" Margin="758,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="24" FontFamily="Franklin Gothic Demi Cond" FontSize="20" Text="Kč"/>
        <TextBlock x:Name="tbl_moznostText" HorizontalAlignment="Left" Height="28" Margin="468,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" FontFamily="Franklin Gothic Demi Cond" FontSize="22" Text="Možnost výběru:"/>
        <TextBlock x:Name="tbl_moznostCastka" HorizontalAlignment="Left" Height="23" Margin="630,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" FontFamily="Franklin Gothic Demi Cond" FontSize="20" Text="15000" TextAlignment="Right"/>
        <TextBlock x:Name="tbl_moznostText2" HorizontalAlignment="Left" Height="23" Margin="758,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="24" FontFamily="Franklin Gothic Demi Cond" FontSize="20" Text="Kč"/>
        <Button x:Name="b_zrusit" Visibility="Visible" Content="ZRUŠIT ÚČET" HorizontalAlignment="Left" Height="32" Margin="655,10,0,0" VerticalAlignment="Top" Width="127" Background="#FF444444" Foreground="White" FontFamily="Franklin Gothic Medium" FontSize="14" Click="b_zrusit_Click"/>

